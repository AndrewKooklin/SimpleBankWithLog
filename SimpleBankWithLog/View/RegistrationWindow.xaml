<Window x:Class="SimpleBank.View.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleBank.View"
        mc:Ignorable="d"
        Title="Registration" 
        Height="200" 
        Width="400"
        Background="#FFCCF6EE"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="User"
               Margin="0,0,150,0"
               Padding="40,2,0,0"
               FontSize="16"
               FontWeight="Bold"
               Width="87"
               Height="25"/>
        <ComboBox x:Name="SelectUser"
                  HorizontalAlignment="Center" 
                  Margin="72,0,0,0" 
                  VerticalAlignment="Center" 
                  Width="100" 
                  Height="25" 
                  SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="Manager"></ComboBoxItem>
            <ComboBoxItem Content="Consultant"></ComboBoxItem>
        </ComboBox>

    </Grid>
</Window>
